<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.conradowatz.essenimkepler.LoginActivity">

    <ImageView
        android:id="@+id/login_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"/>

    <TextView
        android:text="Willkommen bei Essen im Kepler. Bitte logge dich mit deinen Benutzerdaten an, um die App nutzen zu kÃ¶nnen!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:id="@+id/login_welcome_textView"
        android:layout_below="@id/login_imageView"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:layout_marginTop="60dp"
        android:layout_below="@id/login_welcome_textView"
        android:id="@+id/login_email_editText"
        android:hint="E-Mail" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/login_email_editText"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/login_password_editText"
        android:layout_centerHorizontal="true"
        android:hint="Passwort" />

    <RelativeLayout
        android:id="@+id/login_buttonLayout"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_password_editText"
        android:layout_alignRight="@+id/login_password_editText"
        android:layout_alignEnd="@+id/login_password_editText">

        <ProgressBar
            android:id="@+id/login_progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/accent"
            android:visibility="invisible"
            android:theme="@style/ProgressBarStyle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login"
            android:background="@color/accent"
            android:textColor="@color/white"
            android:id="@+id/login_button" />



    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warn_text"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:text="FAILED TO LOGIN"
        android:layout_below="@id/login_password_editText"
        android:layout_alignLeft="@id/login_password_editText"
        android:layout_toLeftOf="@id/login_buttonLayout"
        android:layout_marginRight="10dp"
        android:id="@+id/login_error_textView"/>

</RelativeLayout>
