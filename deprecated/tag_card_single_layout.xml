<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/tag_single_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">


            <TextView
                android:id="@+id/tag_single_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20. Januar 2015"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag_single_specialDay_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:layout_alignParentRight="true"
                android:text="HEUTE"/>

            <TextView
                android:id="@+id/tag_single_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tag_single_date_textView"
                android:layout_marginTop="10dp"
                android:text="3,50€" />

            <TextView
                android:id="@+id/tag_single_desc_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@id/tag_single_price_textView"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tag_single_price_textView"
                android:text="Fischstäbchen mit Majo" />


        </RelativeLayout>

        <View
            android:id="@+id/tag_single_highlight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/accent_border"
            android:visibility="invisible"/>

    </FrameLayout>
</android.support.v7.widget.CardView>